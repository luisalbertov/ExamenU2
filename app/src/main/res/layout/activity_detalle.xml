<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".DetalleActivity">

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="MOVIE NAME"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txtGenre"/>

    <TextView
        android:id="@+id/txtGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Genre"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf ="@id/txtName"
        app:layout_constraintBottom_toTopOf ="@id/txtLetraGenero"/>
    <TextView
        android:id="@+id/txtLetraGenero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="A"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf ="@id/txtGenre"
        app:layout_constraintBottom_toTopOf ="@id/txtNombreGenero"/>

    <TextView
        android:id="@+id/txtNombreGenero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Genero"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="@color/purple_200"
        app:layout_constraintTop_toBottomOf ="@id/txtLetraGenero"
        app:layout_constraintBottom_toBottomOf="parent"/>


</LinearLayout>